{{define "field-renderer" -}}
{{range .Fields -}}
  {/* {{.DisplayName}} field */}
  {{- if .NoCreate }}
  {!(mode === 'create' && {{.NoCreate}}) && (
    <div>
      {{- if or .IsStruct .IsRepeated .IsMap .IsMessage | and (not .IsTimestamp) }}
      {/* Complex field - traditional layout */}
      <div className="space-y-2">
{{template "field-label" .}}
        {{- if .IsStruct }}
{{template "struct-field" .}}
        {{- else if .IsRepeated }}
{{template "array-field" .}}
        {{- else if .IsMap }}
{{template "map-field" .}}
        {{- else if .IsMessage }}
{{template "message-field" .}}
        {{- end }}
{{template "validation-error" .}}
      </div>
      {{- else if .IsEnum }}
{{template "enum-field" .}}
      {{- else if .IsTimestamp }}
{{template "timestamp-field" .}}
      {{- else if .AutofillType }}
{{template "autofill-field" .}}
      {{- else if eq .TypeScript "number" }}
{{template "simple-number-field" .}}
      {{- else if eq .TypeScript "boolean" }}
{{template "simple-boolean-field" .}}
      {{- else if eq .TypeScript "string" }}
{{template "simple-string-field" .}}
      {{- else }}
{{template "basic-input-field" .}}
      {{- end }}
    </div>
  )}
  {{- else }}
  <div>
    {{- if or .IsStruct .IsRepeated .IsMap .IsMessage | and (not .IsTimestamp) }}
    {/* Complex field - traditional layout */}
    <div className="space-y-2">
{{template "field-label" .}}
      {{- if .IsStruct }}
{{template "struct-field" .}}
      {{- else if .IsRepeated }}
{{template "array-field" .}}
      {{- else if .IsMap }}
{{template "map-field" .}}
      {{- else if .IsMessage }}
{{template "message-field" .}}
      {{- end }}
{{template "validation-error" .}}
    </div>
    {{- else if .IsEnum }}
{{template "enum-field" .}}
    {{- else if .IsTimestamp }}
{{template "timestamp-field" .}}
    {{- else if .AutofillType }}
{{template "autofill-field" .}}
    {{- else if eq .TypeScript "number" }}
{{template "simple-number-field" .}}
    {{- else if eq .TypeScript "boolean" }}
{{template "simple-boolean-field" .}}
    {{- else if eq .TypeScript "string" }}
{{template "simple-string-field" .}}
    {{- else }}
{{template "basic-input-field" .}}
    {{- end }}
  </div>
  {{- end }}
{{- end }}
{{end}}
