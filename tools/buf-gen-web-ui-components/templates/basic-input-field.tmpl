{{define "basic-input-field" -}}
{/* Basic input field - inline layout */}
<div className="flex items-center justify-between">
  <div className="flex items-center space-x-2 min-w-0 flex-1">
    <label className="text-sm font-medium text-gray-700 dark:text-gray-300 whitespace-nowrap">
      {{.DisplayName}}{{if not .IsOptional}} *{{end}}
    </label>
    {{- if .Comment }}
    <div className="relative group">
      <span className="cursor-help text-gray-400 hover:text-gray-600">(?)</span>
      <div className="absolute left-0 bottom-6 bg-gray-800 text-white text-xs rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity z-50 pointer-events-none max-w-sm w-max p-3 min-w-64 max-h-48 overflow-y-auto">
        <pre className="whitespace-pre-wrap text-xs leading-relaxed">{{ .Comment | htmlEscape }}</pre>
      </div>
    </div>
    {{- end }}
  </div>
  <div className="flex-1 max-w-xs ml-4{{if eq .TypeScript "boolean"}} flex justify-start{{end}}">
    <input
      type="{{if eq .TypeScript "string"}}text{{else if eq .TypeScript "number"}}number{{else if eq .TypeScript "boolean"}}checkbox{{else}}text{{end}}"
      {{- if ne .TypeScript "boolean" }}
      value={formData.{{.JSONName}}}
      {{- else }}
      checked={formData.{{.JSONName}}}
      {{- end }}
      onChange={(e) => handleFieldChange('{{.JSONName}}', {{if eq .TypeScript "boolean"}}e.target.checked{{else if eq .TypeScript "number"}}e.target.value === '' ? '' : parseInt(e.target.value){{else}}e.target.value{{end}})}
      disabled={isReadOnly || (mode === 'edit' && {{.NoEdit}})}
      className="{{if eq .TypeScript "boolean"}}h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded{{else}}w-full px-3 py-1 text-sm border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600 dark:text-white{{end}}"
    />
    {validationErrors.{{.JSONName}} && (
      <div className="text-xs text-red-600 dark:text-red-400 mt-1{{if eq .TypeScript "boolean"}} ml-2{{end}}">
        {validationErrors.{{.JSONName}}}
      </div>
    )}
  </div>
</div>
{{end}}
